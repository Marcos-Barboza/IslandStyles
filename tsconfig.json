{
    "compileOnSave": true,
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es6",
        "lib": [
            "esnext",
            "es2015",
            "es2017",
            "es2016",
            "dom"
        ],
        "removeComments": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "baseUrl": "./",
        "paths": {
            "components/*": [
                "src/components/*"
            ],
        },
    },
    "exclude": ["node_modules"]
}